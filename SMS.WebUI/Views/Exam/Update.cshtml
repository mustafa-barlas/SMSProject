@model SMS.DtoLayer.Exam.ExamUpdateDto

@{
    ViewBag.Title = "Sınav Güncelleme";
}

<h2 class="mb-4">Sınav Güncelle</h2>

<form asp-controller="Exam" asp-action="Update" method="post" class="border p-4 rounded shadow-sm">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label">Ad</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamDate" class="form-label">Sınav Tarihi</label>
        <input asp-for="ExamDate" type="date" class="form-control"/>
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>


    <div class="form-check form-switch mb-4">
        <input asp-for="Status" class="form-check-input" type="checkbox" role="switch"/>
        <label asp-for="Status" class="form-check-label">Aktif mi?</label>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Geri Dön</a>
</form>