@model SMS.DtoLayer.ExamResult.ExamResultCreateDto

@{
    ViewData["Title"] = "Sınav Sonucu Gir";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Sınav Sonucu Gir</h2>

    <form asp-action="Create" method="post">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <!-- Öğrenci Seçimi -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="StudentId">Öğrenci</label>
                            <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                    </div>

                    <!-- Sınav Seçimi -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="ExamId">Sınav</label>
                            <select asp-for="ExamId" class="form-control" asp-items="ViewBag.Exams">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                    </div>

                    <!-- Modül Seçimi -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="ModuleId">Modül</label>
                            <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.Modules">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Doğru Cevaplar -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="Correct">Doğru Cevaplar</label>
                            <input asp-for="Correct" class="form-control" type="number" min="0"/>
                        </div>
                    </div>

                    <!-- Yanlış Cevaplar -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="InCorrect">Yanlış Cevaplar</label>
                            <input asp-for="InCorrect" class="form-control" type="number" min="0"/>
                        </div>
                    </div>
                </div>

                <!-- Submit Butonu -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg px-5">Oluştur</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .form-control {
            border-radius: 10px;
        }

        .btn {
            border-radius: 5px;
        }

        .card {
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        .container {
            max-width: 900px;
        }

        label {
            font-weight: bold;
        }
    </style>
}
