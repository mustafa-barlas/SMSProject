                                <input type="hidden" name="StudentId" value="@Model.Id" />

                                <input type="text" name="Title" class="form-control mb-2" placeholder="Ödev Başlığı" required />
                                <input type="text" name="Content" class="form-control mb-2" placeholder="İçerik" required />
                                <input type="date" name="DueDate" class="form-control mb-2" required />

                                <div class="form-check mb-2">
                                    <input type="checkbox" class="form-check-input" name="Status" value="true" id="statusCheck" />
                                    <label class="form-check-label" for="statusCheck">Durum (aktif mi?)</label>
                                </div>

                                <div class="form-check mb-3">
                                    <input type="checkbox" class="form-check-input" name="IsFinished" value="true" id="isFinishedCheck" />
                                    <label class="form-check-label" for="isFinishedCheck">Tamamlandı mı?</label>
                                </div>

                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </form>



