@model SMS.WebUI.ViewModels.Student.StudentCreateViewModel

@{
    ViewData["Title"] = "Yeni Öğrenci Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Yeni Öğrenci Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Student" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Ad</label>
                            <input asp-for="Name" class="form-control" placeholder="Öğrenci adı giriniz"/>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Surname" class="form-label">Soyad</label>
                            <input asp-for="Surname" class="form-control" placeholder="Öğrenci soyadı giriniz"/>
                            <span asp-validation-for="Surname" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                            <input asp-for="DateOfBirth" class="form-control" type="date"/>
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Görsel</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si giriniz"/>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="Status" class="form-check-input" type="checkbox" role="switch" />
                            <label asp-for="Status" class="form-check-label">Aktif mi?</label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
