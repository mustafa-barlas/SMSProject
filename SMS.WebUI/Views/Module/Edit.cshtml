@model SMS.DtoLayer.Module.ModuleUpdateDto

@{
    ViewData["Title"] = "Ders Güncelleme";
}

<h2>Ders Güncelleme </h2>

<form asp-action="Edit" method="post" asp-controller="Module">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Title"> Ders Adı</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">Ders Görseli</label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Status" class="form-check-input"/>
        <label asp-for="Status" class="form-check-label">Aktif Mi?</label>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>