@model SMS.DtoLayer.Module.ModuleUpdateDto

@{
    ViewData["Title"] = "Edit Module";
}

<h2>Edit Module</h2>

<form asp-action="Edit" method="post" asp-controller="Module">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" class="form-control" />
        <span asp-validation-for="ModuleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <textarea asp-for="ImageUrl" class="form-control"></textarea>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <input asp-for="Status" class="form-check-input" />
        <label asp-for="Status" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>