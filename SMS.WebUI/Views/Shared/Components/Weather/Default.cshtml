@model SMS.WebUI.Models.WeatherViewModel

<div class="col-md-6 grid-margin stretch-card">
    <div class="card tale-bg">
        <div class="card-people mt-auto">
            <img src="skydash-free-bootstrap-admin-template-main/template/images/dashboard/people.svg" alt="people">
            <div class="weather-info">
                <div class="d-flex">
                    <div>
                        <h2 class="mb-0 font-weight-normal">
                            <i class="icon-sun mr-2"></i>
                            @Model?.Temperature ?? "N/A" <sup>°C</sup>
                        </h2>
                    </div>
                    <div class="ml-2">
                        <h4 class="location font-weight-normal">
                            @Model?.City ?? "Bilinmiyor"
                        </h4>
                        <h6 class="font-weight-normal">
                            @Model?.Country ?? "Bilinmiyor"
                        </h6>
                    </div>
                </div>

                <!-- Hava durumu açıklaması ekleyebilirsin -->
                <div class="weather-condition">
                    <h5>@Model?.ConditionText ?? "Durum Bilgisi Yok"</h5>
                </div>
            </div>
        </div>
    </div>
</div>