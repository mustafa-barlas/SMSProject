@model List<SMS.DtoLayer.Module.ModuleDto>

@{
    ViewData["Title"] = "Module List";
    Layout = "_Layout";
}

<h2>Module List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">+ Add New Module</a>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var module in Model)
    {
        <tr>
            <td>@module.ModuleName</td>
            <td>@module.ImageUrl</td>
            <td>
                <form asp-action="Delete" method="post" style="display:inline">
                    <input type="hidden" name="id" value="@module.Id"/>
                    <button type="submit" class="btn @(module.Status ? "btn-success" : "btn-secondary") btn-sm">
                        @(module.Status ? "Active" : "Inactive")
                    </button>
                </form>
            </td>
            <td>
                <a asp-action="Detail" asp-route-id="@module.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@module.Id" class="btn btn-warning btn-sm">Edit</a>
            </td>


        </tr>
    }
    </tbody>
</table>