@model List<SMS.DtoLayer.Topic.TopicDto>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h2>Topic List</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>Topic Name</th>
        <th>Status</th>
        <th>Module</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var topic in Model)
    {
        <tr>
            <td>@topic.TopicName</td>
            <td>@(topic.Status ? "Active" : "Inactive")</td>
            <td>@(topic.ModuleId != null ? "Module Available" : "No Module")</td>
            <td>
                <a href="@Url.Action("Detail", "Topic", new { id = topic.Id })" class="btn btn-info btn-sm">Details</a>
                <a href="@Url.Action("Edit", "Topic", new { id = topic.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Topic", new { id = topic.Id })" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
