<!doctype html>

<html
  lang="en"
  class="layout-menu-fixed layout-compact"
  data-assets-path="sneat/assets/"
  data-template="vertical-menu-template-free">

<head>
  <meta charset="utf-8"/>
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"/>

  <title>SUMS - Student Management System</title>

  <meta name="description" content=""/>

  @await Html.PartialAsync("Components/HeadViewComponentPartial/Default")
</head>
<body>
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <!-- Menu -->

    @await Html.PartialAsync("Components/LayoutViewComponentPartial/Default") <!-- / Menu -->

    <!-- Layout container -->
    <div class="layout-page">
      <!-- Navbar -->

      <nav
        class="layout-navbar container-xxl navbar-detached navbar navbar-expand-xl align-items-center bg-navbar-theme"
        id="layout-navbar">
        <div class="layout-menu-toggle navbar-nav align-items-xl-center me-4 me-xl-0 d-xl-none">
          <a class="nav-item nav-link px-0 me-xl-6" href="javascript:void(0)">
            <i class="icon-base bx bx-menu icon-md"></i>
          </a>
        </div>

        <div class="navbar-nav-right d-flex align-items-center justify-content-end" id="navbar-collapse">
          <!-- Search -->
          <div class="navbar-nav align-items-center me-auto">
            <div class="nav-item d-flex align-items-center">
              <span class="w-px-22 h-px-22"><i class="icon-base bx bx-search icon-md"></i></span>
              <input
                type="text"
                class="form-control border-0 shadow-none ps-1 ps-sm-2 d-md-block d-none"
                placeholder="search something"
                aria-label="Searchsneat/sneat-bootstrap-html-admin-template-free."/>
            </div>
          </div>
          <!-- /Search -->

          <ul class="navbar-nav flex-row align-items-center ms-md-auto">


            <!-- User -->
            @await Html.PartialAsync("Components/UserViewComponentPartial/Default") <!--/ User -->
          </ul>
        </div>
      </nav>

      <!-- / Navbar -->

      <!-- Content wrapper -->
      <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
          @RenderBody() <!-- Edit sayfası buraya basılacak -->
        </div>
      </div>

      <!-- / Content -->

      <!-- Footer -->
      @await Html.PartialAsync("Components/FooterViewComponentPartial/Default")
      <!-- / Footer -->

      <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->
  </div>
  <!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>

<!-- / Layout wrapper -->


<!-- Core JS -->

@await Html.PartialAsync("Components/ScriptViewComponentPartial/Default")


</body>
</html>

