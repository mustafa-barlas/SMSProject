@page "{id:guid}"
@model SMS.DtoLayer.Student.StudentUpdateDTO

@{
    ViewBag.Title = "Delete Student";
    Layout = "_Layout";
}

<h2>Are you sure you want to delete this student?</h2>

<p>Student: @Model.Name</p>

<form asp-action="Delete" asp-controller="Students" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Index", "Students")" class="btn btn-secondary">Cancel</a>
</form>